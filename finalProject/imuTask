import imu
from pyb import I2C

def IMU(shares):
    head = shares
    BNOstate = 0

    while True:
        # State 0: Initialization
        if BNOstate == 0:
            i2c=I2C(1,I2C.CONTROLLER,baudrate = 400000)
            i2c.init(I2C.CONTROLLER)
            bno = imu.BNO055(i2c)
            bno.mode("CONFIG")
            bno.write_coef()
            bno.mode("NDOF")
            BNOstate = 1
            yield
        # State 1: Grabbing heading
        elif BNOstate == 1:
            head.put(bno.heading())
            yield
